@using EventEase.Models
@code {
    [Parameter] public EventModel Event { get; set; } = new EventModel();
}

<div class="card m-2 p-3 border shadow-sm">
    <h4>@Event.Name</h4>
    <p><strong>Date:</strong> @Event.Date.ToShortDateString()</p>
    <p><strong>Location:</strong> @Event.Location</p>
    <a href="/eventdetails/@Event.Id">View Details</a>
</div>
