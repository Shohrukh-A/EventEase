@page "/eventdetails/{EventId:int}"
@using EventEase.Models
@using EventEase.Shared
@inject NavigationManager Navigation

<h3>Event Details</h3>

@if (eventModel == null)
{
    <p>Event not found.</p>
}
else
{
    <div class="border p-3">
        <h4>@eventModel.Name</h4>
        <p>Date: @eventModel.Date.ToShortDateString()</p>
        <p>Location: @eventModel.Location</p>
        <a href="/register/@eventModel.Id">Register</a>
    </div>
}

@code {
    [Parameter] public int EventId { get; set; }
    private EventModel? eventModel;

    protected override void OnInitialized()
    {
        var events = new List<EventModel>
        {
            new() { Id = 1, Name = "Tech Conference", Date = DateTime.Now.AddDays(10), Location = "New York" },
            new() { Id = 2, Name = "Networking Night", Date = DateTime.Now.AddDays(20), Location = "San Francisco" }
        };

        eventModel = events.FirstOrDefault(e => e.Id == EventId);
    }
}
