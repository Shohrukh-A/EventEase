@page "/events"
@using EventEase.Models
@using EventEase.Shared

<h3>Upcoming Events</h3>

@foreach (var ev in Events)
{
    <EventCard Event="ev" />
}

@code {
    private List<EventModel> Events = new()
    {
        new EventModel { Id = 1, Name = "Tech Conference", Date = DateTime.Now.AddDays(10), Location = "New York" },
        new EventModel { Id = 2, Name = "Networking Night", Date = DateTime.Now.AddDays(20), Location = "San Francisco" }
    };
}
